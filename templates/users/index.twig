{% extends "layout.twig" %}
{% block title %}Пользователи{% endblock %}
{% block content %}
<a class="btn btn-primary" href="{{ url_for('users.new') }}" role="button">Создать</a>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>Created date</th>
    </tr>
  </thead>
  <tbody>
    {% for user in users %}
    <tr>
      <td>{{ user.id }}</td>
      <td>{{ user.email }}</td>
      <td>{{ user.created_at }}</td>
    </tr>
    {% endfor %}
  </tbody>
</table>
{% endblock %}
